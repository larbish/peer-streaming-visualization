{
	"extends": ["tslint-config-airbnb", "tslint-eslint-rules", "tslint-config-prettier"],
	"rules": {
		"no-shadowed-variable": true,
		"no-any": true,
		"no-console": [true, "debug", "info", "time", "timeEnd", "trace", "log"],
		"no-debugger": true,
		"ter-indent": false,
		"ordered-imports": true,
		"object-literal-sort-keys": false,
		"interface-name": [true, "never-prefix"],
		"variable-name": [true, "allow-leading-underscore", "allow-pascal-case", "ban-keywords", "check-format"],
		"function-name": [
			true,
			{
				"method-regex": "^_?[a-z][\\w\\d]+$"
			},
			{
				"private-method-regex": "^_?[a-z][\\w\\d]+$"
			},
			{
				"protected-method-regex": "^_?[a-z][\\w\\d]+$"
			},
			{
				"static-method-regex": "^_?[A-Z_\\d]+$"
			},
			{
				"function-regex": "^_?[a-z][\\w\\d]+$"
			}
		],
		"max-classes-per-file": [true, 5],
		"array-type": [true, "array"],
		"typedef": [true, "call-signature", "parameter", "member-variable-declaration"],
		"cyclomatic-complexity": [true, 11],
		"no-reference": true,
		"deprecation": {
			"severity": "warning"
		},
		"import-blacklist": [true, "rxjs/Rx"],
		"member-access": false,
		"member-ordering": [
			true,
			{
				"order": ["static-field", "instance-field", "static-method", "instance-method"]
			}
		],
		"no-empty": false,
		"no-non-null-assertion": true,
		"no-redundant-jsdoc": true,
		"no-switch-case-fall-through": true,
		"no-var-requires": false,
		"object-literal-key-quotes": [true, "as-needed"]
	}
}
